<Window x:Class="Notatki.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notatki"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        Title="MainWindow" Height="450" Width="800">


    <Grid>
        <Grid HorizontalAlignment="Left" Height="430" Margin="569,10,0,0" VerticalAlignment="Top" Width="221" Background="#19000000">
            <Button Style="{StaticResource ButtonStyle}" x:Name="edit" Content="Edit" HorizontalAlignment="Left" Margin="10,373,0,0" VerticalAlignment="Top" Width="201" Height="47" Click="Edit_reminder_click"/>
            <Label x:Name="label" Content="Najbliższe powiadomienia:" Margin="10,10,10,0" VerticalAlignment="Top" FontSize="16" Background="{x:Null}" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
